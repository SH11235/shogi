{
    "mcpServers": {
        "playwright": {
            "command": "npx",
            "args": ["@playwright/mcp"],
            "env": {
                "PLAYWRIGHT_BROWSER": "chromium",
                "PLAYWRIGHT_HEADLESS": "true"
            }
        },
        "playwright-vision": {
            "command": "npx",
            "args": ["@playwright/mcp", "--vision"],
            "env": {
                "PLAYWRIGHT_BROWSER": "chromium",
                "PLAYWRIGHT_HEADLESS": "false"
            }
        }
    }
}
