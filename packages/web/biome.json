{
    "files": {
        "ignore": [
            "coverage/**",
            "dist/**",
            "node_modules/**",
            "storybook-static/**",
            "*.json",
            ".vscode/**",
            "src/wasm/**"
        ]
    },
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 100
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noExplicitAny": "warn"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double",
            "trailingCommas": "all"
        }
    }
}
