{
    "name": "shogi",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc -b && vite build",
        "lint": "eslint .",
        "lint:biome": "biome lint",
        "lint:biome:fix": "biome lint --fix",
        "preview": "vite preview",
        "format": "biome format --write .",
        "format:check": "biome check --write .",
        "typecheck": "tsc --noEmit",
        "prepare": "husky",
        "test": "vitest run",
        "test:watch": "vitest",
        "coverage": "vitest run --coverage"
    },
    "dependencies": {
        "@duckdb/duckdb-wasm": "^1.29.1-dev132.0",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "immer": "^10.1.1",
        "lucide-react": "^0.503.0",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "recharts": "^2.15.3",
        "tailwind-merge": "^3.2.0",
        "zustand": "^5.0.4"
    },
    "devDependencies": {
        "@biomejs/biome": "^1.9.4",
        "@eslint/js": "^9.22.0",
        "@tailwindcss/vite": "^4.1.5",
        "@types/node": "^22.15.17",
        "@types/react": "^19.0.10",
        "@types/react-dom": "^19.0.4",
        "@vitejs/plugin-react-swc": "^3.8.0",
        "@vitest/coverage-v8": "^3.1.3",
        "esbuild": "^0.25.4",
        "eslint": "^9.22.0",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.19",
        "globals": "^16.0.0",
        "happy-dom": "^17.4.6",
        "husky": "^9.1.7",
        "lint-staged": "^15.5.1",
        "tailwindcss": "^4.1.5",
        "ts-node": "^10.9.2",
        "tw-animate-css": "^1.2.8",
        "typescript": "~5.7.2",
        "typescript-eslint": "^8.26.1",
        "vite": "^6.3.1",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^3.1.3"
    },
    "volta": {
        "node": "24.0.1",
        "npm": "11.3.0"
    },
    "comment": {
        "eslint": "一旦lint stagedから外す"
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx}": ["biome check --write ."],
        "*.{css,md,json}": ["biome format --write"]
    }
}
