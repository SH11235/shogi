{
    "$schema": "https://biomejs.dev/schemas/1.9.0/schema.json",
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 100
    },
    "linter": {
        "enabled": true,
        "rules": {
            "style": {
                "useImportType": "error"
            },
            "correctness": {
                "noUnusedImports": "error"
            }
        }
    },
    "files": {
        "ignore": [
            "tsconfig*.json",
            "package.json",
            "package-lock.json",
            "node_modules/**",
            ".git/**",
            "dist/**",
            ".turbo/**",
            ".vscode/**",
            "**/test-results/**",
            "**/playwright-report/**"
        ]
    }
}
